                    <!-- User Card Box Start Here -->
                    <div class="userCard_container">
                        <div class="userCard_header">
                            <h2 id="userCardHeader-text">Your All Products</h2>
                            <button id="close_userCard_container"><i class="fa-solid fa-arrow-right"></i></button>
                        </div>
                        <div class="userCard_container_main">
                            <div class="user_add_toCard_Product_box">
                                <div class="user_add_toCard_image_desciption_box">
                                    <!-- Product Image -->
                                    <div class="user_add_toCard_image">
                                        <img src="https://encrypted-tbn2.gstatic.com/shopping?q=tbn:ANd9GcT0wM-dXt5AijTbUOdkoiMONHqbLkAmg9M5n9j-ako14aJLP3u8V_nWHtmNFqLckWYvHzSCGoYLvvmx3KrLS7QbnoL3GPMB1jHZN4fU1MVa"
                                            alt="Product" />
                                    </div>

                                    <!-- Product Details -->
                                    <div class="user_add_toCard_description">
                                        <p class="user_add_toCard_des_me_title">Hell This is Product Title</p>
                                        <p class="user_add_toCard_quantity"><span>Quantity: 2</span></p>

                                        <!-- Pricing Section -->
                                        <div class="user_add_toCard_priceBox">
                                            <div class="user_add_toCard_price-details">
                                                <span class="user_add_toCard_discounted-price">₹499</span>
                                                <span class="user_add_toCard_original-price">₹999</span>
                                                <span class="user_add_toCard_discount-percent">50% OFF</span>
                                            </div>
                                            <p class="user_add_toCard_you-save">You Save: ₹500</p>
                                        </div>

                                        <button id="removeCardProduct">Remove</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="userCard_footer">
                            <div class="cart-total-container">
                                <p>Total:
                                    <span class="cart-total">
                                        <span class="cart-total-skeleton"></span>
                                    </span>
                                </p>
                            </div>
                            <button class="userCard-checkout-btn">Checkout</button>
                        </div>

                    </div>
                    <!--User Card Box End Here -->
                    <!-- User Like & Dislike Message Box -->
                    <div id="userlikeMsgBox" class="userLikemsg-box userLikehidden"></div>
