            </div>
          </div>

        </div>
</div>
    
    </div>

    <div class="watchlist-products-container">
      <% for (let product of userLikedProduct) { %>
        <a href="/shopcard/<%= product._id %>" class="watchlist-product-link-in-view">
          <div class="watchlist-user-product-box">
            <div class="watchlist-user-product-image">
              <img src="<%= product.image[0] %>" alt="<%= product.title %>">
            </div>

            <div class="watchlist-user-product-description-with-delete-btn">
              <div class="watchlist-user-product-description">
                <p class="watchlist-user-product-title"><%= product.description %></p>
                <p class="watchlist-user-product-brand"><b><%= product.Brand %></b></p>
                <p class="watchlist-user-product-price-main">
                  <span class="watchlist-user-product-price">₹<%= product.prize %></span>
                  <span class="watchlist-user-product-discount">100</span>
                  <span class="watchlist-user-product-discount-off">20% off</span>
                </p>
              </div>

            <div class="watchlist-user-product-deleteBtn">
                <button class="delete-btn">
                    <span class="material-symbols-outlined">delete</span>
                </button>
            </div>
            
            </div>
          </div>
        </a>
      <% } %>
    </div>
  </section>
  <!-- Right Section for total price checkout  -->  
</div>

<script type="module" src="/javascript/watchlist.js" defer></script>
