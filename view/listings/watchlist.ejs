<div class="watchlist-main-container">
  <!-- Left Sidebar -->
  <aside class="watchlist-user-products-checkoutMain">

    <div class="watchlist-checkout-head">
      <h5>Price Details</h5>
      <hr>
    </div> 
    <div class="watchlist-product-details-checkout-m">
